{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug (unittests)",
      "type":"cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/tests/gTestUnit",
      //"preLaunchTask": "build (unittest)",
      "args": [
        "--gtest_filter=*.*"
      ],
      "stopAtEntry": true,
      "cwd": "${workspaceFolder}/build/tests",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
          {
              "description": "Enable pretty-printing for gdb",
              "text": "-enable-pretty-printing",
              "ignoreFailures": true
          },
          {
            "description": "Set default output to hexadecimal",
            "text": "set output-radix 16",
            "ignoreFailures": true
          }
      ],
      "logging": {
        "engineLogging": true, // Aktiviert Debug-Logging
        "trace": true,
        "traceResponse": true
      }
    },
    {
      "name": "x64 Build Environment (local)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/CppExercise",
      "args": [
         "15"
      ],
      "stopAtEntry": true,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "MIMode": "gdb",
      "setupCommands": [
          {
              "description": "Enable pretty-printing for gdb",
              "text": "-enable-pretty-printing",
              "ignoreFailures": true
          },
          {
              "description": "Set path variable to .",
              "text": "set env LD_LIBRARY_PATH=${workspaceFolder}/generated/ubuntu20-gcc-x64/Debug/usr/lib/",
              "ignoreFailures": false
          }
      ]
  },
  {
    "name": "aarch64 ctrlX (remote)",
    "type": "cppdbg",
    "request": "launch",
    "program": "${workspaceFolder}/generated/ubuntu20-gcc-aarch64/Debug/pqMeasure",
    "cwd": "${workspaceFolder}",
    "miDebuggerPath": "/usr/bin/gdb-multiarch",
    "miDebuggerServerAddress": "192.168.1.230:12345",
    "stopAtEntry": true,
    "targetArchitecture": "arm64",
    "externalConsole": false,
    "MIMode": "gdb",
    "setupCommands": [
        {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
        },
    ]
  }

  ]
}