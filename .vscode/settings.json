 {
    "window.zoomLevel": -0.7,
    "window.title": "${rootName}${separator}${activeEditorShort}",
    "window.titleBarStyle": "default",
    "workbench.colorTheme": "Visual Studio 2017 Light - C++",
    "workbench.colorCustomizations": {
        // BRACKET PAIR
        "editorIndentGuide.activeBackground1": "#b8cacad2",
        "editorIndentGuide.background1": "#2832365b",     
        // GIT LINES
        "editorGutter.addedBackground": "#00000000",
        "editorGutter.deletedBackground": "#00000000",
        "editorGutter.modifiedBackground": "#00000000",
        "editor.background": "#edeff0e8",
        "editor.foreground": "default",
        "editorGroupHeader.tabsBackground": "#cfcccc",
        "editorGroupHeader.tabsBorder": "#6e6b6b",
        "editorGroup.border": "#215bd6",
        "editor.foldBackground": "#c5cdd4",
        "editor.lineHighlightBorder": "#d8d9db",
        "editorWidget.background": "#c5cdd4",
        "editorWidget.border":"#454545",
        "editor.wordHighlightTextBackground": "#c5cdd4",
        "tab.activeBackground": "#f9fcff",
        "tab.inactiveBackground" "#e9f2fa",
        "tab.hoverBackground""#f9fcff",
        "tab.unfocusedActiveBackground": "#f9fcff",
        "tab.selectedBackground": "#f9fcff",
        "tab.selectedForeground": "#c5cdd4",
        "titleBar.activeBackground": "#c5cdd4",
        "titleBar.inactiveBackground": "#c5cdd4",
        "activityBar.activeBackground": "#60727a",
        "activityBar.background": "#878c91",
        "terminal.background": "#141518",
        "terminal.foreground": "#514d5a",
        "sideBar.background": "#eceef2",
        "sideBar.border": "#142549",
        "scrollbarSlider.background": "#c5cdd4",
    },
    "editor.tokenColorCustomizations": 
    {
        "textMateRules": [
            {
                "scope": "keyword.directive.assembly",
                "settings": { "foreground": "#0000FF" } // Blau für Direktiven
            },
            {
                "scope": "comment.line.double-slash.assembly",
                "settings": { "foreground": "#008000" } // Grün für Kommentare
            },
            {
                "scope": "entity.name.label.assembly",
                "settings": { "foreground": "#FFD700" } // Gelb für Labels
            },
            {
                "scope": "constant.numeric.hex.assembly",
                "settings": { "foreground": "#800080" } // Lila für Hex-Werte
            },
            {
                "scope": "keyword.control.ld",
                "settings": { "foreground": "#0000FF" } // Blau für Schlüsselwörter
            },
            {
                "scope": "comment.block.ld",
                "settings": { "foreground": "#008000" } // Grün für Kommentare
            },
            {
                "scope": "entity.name.section.ld",
                "settings": { "foreground": "#FFD700" } // Gelb für Sektionen
            },
            {
                "scope": "constant.numeric.hex.ld",
                "settings": { "foreground": "#800080" } // Lila für Hex-Werte
            }
        ],
        
    },  
    "debug.showVariableTypes": true,
    "debug.openDebug": "openOnSessionStart",
    "debug.variablesView.showHex": true,
    "git.allowForcePush": true,
    "editor.fontFamily": "Cascadia Mono",
    "editor.fontLigatures": false,
    "editor.fontSize": 12,
    "editor.tabSize": 2,
    "editor.renderWhitespace": "none",
    "editor.minimap.enabled": false,
    "security.workspace.trust.untrustedFiles": "open",
    "terminal.fontFamily": "Cascadia Mono",
    "terminal.integrated.splitCwd": "workspaceRoot",
    "terminal.integrated.defaultLocation": "view",
    "terminal.integrated.shellIntegration.enabled": true,
    "terminal.integrated.tabs.showActiveTerminal": "always",
    "terminal.integrated.scrollback": 20000,
    "terminal.integrated.fontSize": 12,
    "terminal.integrated.fontWeight": "normal",
    "terminal.integrated.fontWeightBold": "normal",
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell"
        },
        "Command Prompt": {
            "path": [
                "${env:windir}\\Sysnative\\cmd.exe",
                "${env:windir}\\System32\\cmd.exe"
            ],
            "args": [],
            "icon": "terminal-cmd"
        },
        "Git Bash": {
            "source": "Git Bash"
        },
        "Windows PowerShell": {
            "path": "C:\\DevApps\\Pwsh\\pwsh.exe"
            //"C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe"
        }
    },
    "terminal.external.windowsExec": "C:\\DevApps\\Pwsh\\pwsh.exe",
    "terminal.integrated.automationProfile.windows": {
        "path": "C:\\DevApps\\Pwsh\\pwsh.exe"
    },
    "terminal.integrated.defaultProfile.windows": "PowerShell",
